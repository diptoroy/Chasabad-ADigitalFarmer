<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.TipsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_margin="10dp"
            android:id="@+id/textView26"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips Title" />

        <EditText
            android:id="@+id/tipstitle_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Tips Title" />

        <TextView
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tips Details" />

        <EditText
            android:id="@+id/tipsDetails_text"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Tips Details" />

        <Button
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:id="@+id/tipssubmit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_btn_text" />

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/tips_progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>